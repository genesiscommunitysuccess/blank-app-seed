<entity-management
    {{#if config.title}}
    title="{{ config.title }}"
    {{/if}}
    resourceName="{{ config.resourceName }}"
    {{#if config.updateEvent}}
    updateEvent="{{ config.updateEvent }}"
    {{/if}}
    {{#if config.deleteEvent}}
    deleteEvent="{{ config.deleteEvent }}"
    {{/if}}
    {{#if config.createEvent}}
    createEvent="{{ config.createEvent }}"
    {{/if}}
    {{#if config.snapshot}}
    :datasourceConfig="${() => ({isSnapshot: {{ config.snapshot }} })}"
    {{/if}}
    {{#if config.fdc3RowClick}}
    :deferredGridOptions="${() => ({
          onRowClicked: async (e: RowSelectedEvent) => {
              const payload = e.node.isSelected() ? e.data : undefined;
              sendMessageOnChannel('{{config.fdc3RowClick.channel}}', '{{config.fdc3RowClick.type}}', payload)
          }
        })
    }"
    {{/if}}
></entity-management>
