<zero-g2plot-chart
  type="{{ config.type }}"
  :config="${(x) => ({
    {{#ifEquals config.type "pie"}}
      radius: 0.75,
      angleField: 'value',
      colorField: 'groupBy',
    {{else}}
     xField: 'groupBy',
     yField: 'value',
    {{/ifEquals}}
  })}"
>
  <chart-datasource
    resourceName="{{ config.resourceName }}"
    server-fields="{{ config.xField }} {{ config.yField }}"
  ></chart-datasource>
</zero-g2plot-chart>
