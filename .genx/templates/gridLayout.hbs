<zero-layout-region type="horizontal">
    <zero-layout-region type="vertical">
    {{#each route.tiles}}
        {{#ifEquals @index 0}}
        <zero-layout-item title="{{../title}}">
            {{> (lookup ../this 'type') ../this}}
        </zero-layout-item>
        {{/ifEquals}}
        {{#ifEquals @index 1}}
        <zero-layout-item title="{{../title}}">
            {{> (lookup ../this 'type') ../this}}
        </zero-layout-item>
        {{/ifEquals}}
    {{/each}}
    </zero-layout-region>
    <zero-layout-region type="vertical">
    {{#each route.tiles}}
        {{#ifEquals @index 2}}
        <zero-layout-item title="{{../title}}">
            {{> (lookup ../this 'type') ../this}}
        </zero-layout-item>
        {{/ifEquals}}
        {{#ifEquals @index 3}}
        <zero-layout-item title="{{../title}}">
            {{> (lookup ../this 'type') ../this}}
        </zero-layout-item>
        {{/ifEquals}}
    {{/each}}
    </zero-layout-region>
</zero-layout-region>
