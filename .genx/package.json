{
  "name": "@genesiscommunitysuccess/blank-app-seed",
  "description": "Genesis Blank App Seed",
  "version": "1.5.0",
  "license": "Apache-2.0",
  "scripts": {
    "release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "semantic-release": "^21.0.7"
  },
  "genxSeedConfig": {
    "exclude": [
      ".github",
      ".genx/tests",
      ".genx/scripts",
      ".genx/.releaserc"
    ],
    "persistAnswers": true,
    "processFiles": {
      "exclude": [
        ".git",
        ".genx",
        "node_modules",
        ".gradle",
        "gradle"
      ],
      "rename": true,
      "interpolateVariables": {
        "enabled": true,
        "include": [
          "Dockerfile",
          "product-info",
          ".yml",
          ".sh",
          ".json",
          ".js",
          ".kts",
          ".ts",
          ".md",
          ".properties",
          ".html"
        ]
      }
    }
  }
}
