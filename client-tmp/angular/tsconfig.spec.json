{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "outDir": "./out-tsc/spec",
    "types": [
      "jest" 
    ],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "files": [
    "src/jest.setup.ts",
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}